<h3>Create New News</h3>
<hr>
{{#if responseMessage}}
<div class="alert alert-success">
            <h4>The News have been saved!</h4>
        </div>
{{else}}
<div class="form-group {{if model.isValidTitle 'has-success' 'has-error'}}">
  <label class="control-label" for="inputDefault">Title</label>
  {{input id="title" type="text" value=model.title class="form-control" placeholder="Please enter a title." autofocus="autofocus"}}
</div>
<div class="form-group">
  <label for="textArea" class="control-label">Content</label>
	{{textarea id="content" class="form-control" placeholder="Here you can write your story." rows="15" value=model.content}}
  <span class="help-block">A longer block of help text that breaks onto a new line and may extend beyond one line.</span>
</div>

<div class="form-group">
  <label class="control-label" for="inputDefault">Source</label>
  {{input id="link" type="text" value=model.link class="form-control" placeholder="(optional) Enter a Source." autofocus="autofocus"}}
</div>

<button class="btn btn-primary" disabled={{model.isDisabled}} {{action 'saveEntry' model}}>Save News</button>
{{/if}}