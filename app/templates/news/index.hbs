<div class="row">
	<div class="col-sm-6">
		<h3 class="pull-left">List of all news</h3>
	</div>
	<div class="col-sm-6">
		{{#link-to 'news.new' class="pull-right"}}
			<button class="btn btn-success">Create new News</button>
		{{/link-to}}
	</div>
</div>
<hr>
{{#each model as |news|}}
	<br>
	{{#link-to 'news.show' news.id}}<h4>{{news.title}}</h4>{{/link-to}}
	<p>{{news.excerpt}}</p>
	<button class="btn btn-danger btn-xs" {{action 'deleteEntry' news}}>Delete</button>
	<br>
{{/each}}